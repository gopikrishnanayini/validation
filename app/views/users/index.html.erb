<h1>Listing </h1>
<table deep='1'>
<tr>
<th>Firstname</th>
<th>Lastname</th>
<th>Age</th>
<th>Email</th>
</tr>
<% @users.each do |user| %>
<tr>
	<td><%= user.firstname %></td>
	<td><%= user.lastname %></td>
	<td><%= user.age %></td>
	<td><%= user.email %></td>
	<td><%= link_to 'show', user_path(user) %></td>
	<td><%= link_to 'edit', edit_user_path(user) %></td>
	<td><%= link_to 'Destroy', user_path(user),
	         method: :delete,data: { clear:'Are you sure?'} %></td>
</tr>
<% end %>
</table>

<%= link_to 'New User',new_user_path %>